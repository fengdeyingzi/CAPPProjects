<LinearLayout

android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"
android:padding="32dp"
>
<LinearLayout

android:layout_width="match_parent"
android:layout_height="220dp"
android:orientation="vertical"
>

<TextView
android:layout_gravity="center"
android:layout_width="wrap_content"
android:layout_height="220dp"
android:text="转换jpg/png/gif图片为bmp格式。转换后的图片保存到原图片相同的目录下"
android:textSize="16"
android:gravity="center|bottom"
></TextView>
</LinearLayout>
<LinearLayout

android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
>

<EditText

android:id="1"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_weight="1.0"
android:textSize="16"
android:hint="图片路径"
></EditText>
<Button

android:id="2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="选择图片"
android:textSize="16"
></Button>

</LinearLayout>

<Button
android:id="100"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="转换为bmp"
android:textSize="16"
></Button>


</LinearLayout>
